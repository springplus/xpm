{{#detailViews}}
    {{#none}}
        {{#active}}
            <div ng-controller="{{moduleName}}_{{entityName}}_{{parentView}}_none_{{fileName}}">
                <h4 class="ui block black top bottom attached  header">
                    <button class="ui orange submit mini button floated right" ng-click="saveItem()">保存</button>
                    &nbsp;
                    <i class="icon info"></i>
                </h4>

                <div class="sixteen wide column">
                    <div class="ui small form attached fluid segment" id="{{entityName}}Form">
                        {{#templateData}}
                            {{^textarea}}
                                <div class=" field">
                                    <label>{{title}}</label>
                                    <input type="text" ng-model="item.{{identifier}}" name="{{identifier}}"/>
                                </div>
                            {{/textarea}}
                            {{#textarea}}
                                <div class="field">
                                    <div class="field">
                                        <label>{{title}}</label>
                                        <textarea ng-model="item.{{identifier}}"></textarea>
                                    </div>
                                </div>
                            {{/textarea}}
                        {{/templateData}}
                    </div>
                </div>
            </div>
        {{/active}}
    {{/none}}
{{/detailViews}}