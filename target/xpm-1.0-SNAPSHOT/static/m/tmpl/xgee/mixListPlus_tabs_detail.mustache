{{#view.containers.tabs}}
    {{#active}}
        <div ng-controller="{{moduleName}}_{{resName}}_{{view.name}}_tabs_{{name}}">
            <h4 class="ui block black top bottom attached  header">
                <button class="ui orange submit mini button floated right" ng-click="saveItem()">保存</button>
                &nbsp;
                <i class="icon info"></i>
            </h4>
            <div class="sixteen wide column">
                <div class="ui small form attached fluid segment" id="{{resName}}Form">
                    <div class="ui error message"></div>
                    {{#template.data}}
                        <div class="inline field">
                            <label class="xg-one-field-label">
                                {{#tips}}<i class="red icon info" title="{{tips}}"></i>{{/tips}}{{displayName}}
                                {{#required}}<span style="color: red">*</span>{{/required}}
                                </label>
                            {{#type_textarea}}
                                <textarea ng-model="item.{{identifier}}" class="xg-one-field-value"></textarea>
                            {{/type_textarea}}
                            {{#type_select}}
                                <div ngx-select uuid="{{identifier}}" type="{{type_select.type}}"
                                     data="{{type_select.dataRef}}" text="--请选择--"
                                     label="{{type_select.label}}"
                                     value="{{type_select.value}}"
                                     default="item.{{identifier}}"
                                     change="onSelectChange(data)"
                                     style="display: inline" class="xg-one-field-value"></div>
                            {{/type_select}}
                            {{^type_textarea}}
                                {{^type_select}}
                                    <input type="text" ng-model="item.{{identifier}}" name="{{identifier}}"
                                           class="xg-one-field-value"/>
                                {{/type_select}}
                            {{/type_textarea}}
                        </div>
                    {{/template.data}}
                </div>
            </div>
        </div>
    {{/active}}
{{/view.containers.tabs}}
