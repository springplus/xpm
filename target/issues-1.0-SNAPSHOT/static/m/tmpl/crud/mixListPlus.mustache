<div class="ui celled grid" id="{{moduleName}}_{{entityName}}_{{list.view}}"
     ng-controller="{{moduleName}}_{{entityName}}_{{list.view}}">
    <div class="five wide middle column" style="padding: 0">
        <div class="ui secondary pointing blue large menu" style=" margin: 3px;padding:3px;border: 1px">
            <div class="ui item">
                <i class="icon red info"></i>{{list.title}}
            </div>
            <div class="ui floated right item">
                {{#list.actions.custom}}
                    <a class="ui teal mini labeled  button"
                       ng-click="doAction('{{target}}','{{group}}','{{view}}')">{{name}}</a>
                {{/list.actions.custom}}
                    <!--{{^list.actions.default}}-->
                <!--<a class="ui teal mini labeled  button" ng-click="addItem()">新增</a>-->
                <!--<a class="ui teal mini labeled  button" ng-click="removeItem()">删除</a>-->
                    <!--{{/list.actions.default}}-->
                {{#list.actions.default}}
                    {{#add}}
                        {{#enable}}
                            <a class="ui teal mini labeled  button"
                               ng-click="addItem('{{target}}','{{group}}','{{view}}')">{{name}}</a>
                        {{/enable}}
                    {{/add}}
                    {{#delete}}
                        {{#enable}}
                            <a class="ui teal mini labeled  button" ng-click="removeItem()">{{name}}</a>
                        {{/enable}}
                    {{/delete}}
                {{/list.actions.default}}
            </div>
        </div>
        <div ngx-list uuid="'ngx_list_{{entityName}}'" header="listHeader" data="listData"></div>
    </div>

    <div class="twelve wide right column" style="margin: 0px;padding: 0px" ng-show="innerViewTypes.TABS==innerViewType">
        <div class="ui teal secondary pointing filter large menu" style=" margin: 3px;padding:3px;border: 1px">
            {{#detailViews.tabs}}
                <a class="item" ng-class="{active:currentView=='{{fileName}}'}"
                   ng-click="switchTab('{{fileName}}')">{{title}}</a>
            {{/detailViews.tabs}}
        </div>
        <div ng-switch on="currentView">
            {{#detailViews.tabs}}
                <div class='ui divided inbox selection list active tab' ng-switch-when='{{fileName}}'>
                    <div ui-view="{{moduleName}}_{{entityName}}_{{parentView}}_tabs_{{fileName}}"></div>
                </div>
            {{/detailViews.tabs}}
        </div>
    </div>
    <div class="twelve wide right column" style="padding:0px 0px 2px 0px;"
         ng-show="innerViewTypes.STEPS==innerViewType">
        <div class="ui bottom steps" style="display: block">
            {{#detailViews.steps}}
                <div class="ui step" ng-class="{active:currentView=='{{fileName}}'}">{{title}}</div>
            {{/detailViews.steps}}
        </div>
        <div ng-switch on="currentView">
            {{#detailViews.steps}}
                <div class='ui divided inbox selection list active tab' ng-switch-when='{{fileName}}'>
                    <div ui-view="{{moduleName}}_{{entityName}}_{{parentView}}_steps_{{fileName}}"></div>
                    <!--<div class="ui center aligned attached  segment" ng-hide="isLastStep('{{fileName}}')">-->
                        <!--<a class="ui teal mini right labeled icon mini button" ng-click="nextStep('{{fileName}}')">下一步-->
                            <!--<i class="right long arrow icon"></i></a>-->
                    <!--</div>-->
                </div>
            {{/detailViews.steps}}
        </div>
    </div>
    <div class="twelve wide right column" style="margin: 0px;padding: 0px"
         ng-show="innerViewTypes.NONE==innerViewType">
        {{#detailViews.none}}
            <div ui-view="{{moduleName}}_{{entityName}}_{{parentView}}_none_{{fileName}}"></div>
        {{/detailViews.none}}
    </div>
</div>

