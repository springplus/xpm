<div ng-init="toolbarEnabled = false" ng-show="$parent.$designer.designable">
    <div class="ui segment xg-fitted" style="height: 5px;background-color:lightgoldenrodyellow" ng-show="!toolbarEnabled"
         ng-mouseover="toolbarEnabled=true;$parent.$designer.enable(this)">
    </div>
    <div class="ui segment xg-fitted" style="text-align: center;background-color:lightgoldenrodyellow" ng-show="toolbarEnabled"
         ng-mouseleave="toolbarEnabled=false;$parent.$designer.disable(this)" title="对应视图【{{selectTo}}】">
        <div class="ui mini button" ng-click=$parent.showModal({name:'views_design_select',params:{alias:'$alias$',renderTo:'rootModal',selectTo:selectTo,parent:$parent}})>选择视图</div>
        <div class="ui mini button" ng-click=$parent.showModal({name:'views_design_select',params:{alias:'$alias$',renderTo:'rootModal',selectTo:selectTo,parent:$parent}})>配置视图</div>
        <div class="ui mini orange button" ng-click="$parent.$designer.saveCfg();">保存</div>
    </div>
</div>