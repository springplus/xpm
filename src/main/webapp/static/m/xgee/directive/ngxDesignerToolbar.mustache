<div ng-init="toolbarEnabled = false" ng-if="$parent.$designer.designable">
    <div class="ui segment xg-fitted" style="height: 7px;background-color:lightgoldenrodyellow" ng-show="!toolbarEnabled"
         ng-mouseover="toolbarEnabled=true;$parent.$designer.enable(this)">
    </div>
    <div class="ui segment xg-fitted" style="text-align: center;background-color:lightgoldenrodyellow" ng-show="toolbarEnabled"
         ng-mouseleave="toolbarEnabled=false;$parent.$parent.$designer.disable(this)" title="对应include src【{{selectTo}}】">
        <div class="ui mini button" ng-click=$parent.$parent.showModal({name:'views_design_select',renderTo:"rootModal",srcAlias:'$alias$',params:{selectTo:selectTo,parent:$parent}})>选择视图</div>
        <div class="ui mini button" ng-click=$parent.$parent.$designer.showViewEditor({name:'views_design_edit',renderTo:"rootViewEdit",srcAlias:'$alias$',params:{selectTo:selectTo}})>配置</div>
    </div>
</div>