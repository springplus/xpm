<div class="ui secondary pointing blue large menu" style=" margin: 3px 0px;padding: 3px 0px;border: 1px">
    <div class="ui item">
        <i class="icon red info"></i>
        <div ng-bind="$alias$.cfg.header.title" style="display: inline"></div>
    </div>
    <div class="ui floated right item" ng-init="$alias$.currentItem=null">
        <a class="ui teal mini labeled  button" ng-repeat="listAction in $alias$.cfg.header.actions"
           ng-click="onAction('$alias$',listAction)" style="margin-left: 3px"><div ng-bind="listAction.displayName"></div></a>
    </div>
</div>

<div class="ui mini left fluid icon input">
    <input type="text" placeholder="输入关键字，过滤当前列表内容......" style="height: 30px" ng-model="query">
    <i class="filter icon"></i>
</div>
<div class="ui divided inbox selection list" style="margin: 2px;height: 105%">
    <div class="item">
        <div ng-repeat="field in $alias$.cfg.list.fields" ng-style="{'font-weight':'bold','display': 'inline-block','width':field.width}">
            <div ng-bind="field.displayName"></div>
        </div>
    </div>
    <a class="item" ng-repeat="item in $alias$.listData | filter:query" ng-class="{active:$parent.selectedItemIndex==$index}"
       ng-click="onAction('$alias$',$alias$.cfg.list.click)">
        <div ng-repeat="field in $alias$.cfg.list.fields" class="xg-wrapPlus" ng-style="{display: 'inline-block',width:field.width}">
            <div ng-bind="$eval('item.'+field.name)"></div>
        </div>
    </a>
</div>
